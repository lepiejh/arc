<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Battery">
        <attr name="batteryOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="batteryColor" format="color"/>
        <attr name="batteryPower" format="integer"/>
    </declare-styleable>

    <declare-styleable name="WifiSignalView">
        <attr name="signalColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="barCount" format="integer" />
        <attr name="barWidth" format="dimension" />
        <attr name="barSpacing" format="dimension" />
        <attr name="barCornerRadius" format="dimension" />
    </declare-styleable>
</resources>